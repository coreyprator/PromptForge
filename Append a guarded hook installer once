
$footer = @"

--- PF theme/hooks (guarded) ---

try:
from pf.state_theme import install_app_hooks # single entry point
except Exception:
install_app_hooks = None
try:
if install_app_hooks:
install_app_hooks(App)
except Exception:
try:
install_app_hooks(Application)
except Exception:
pass
"@

if ($src -notmatch 'install_app_hooks
ğ´
ğ‘
ğ‘
App') {
$src = $src + "rn" + $footer
Set-Content -Encoding utf8NoBOM $ui $src
Write-Host "Patched: $ui"
} else {
Write-Host "Already patched: $ui"
}

